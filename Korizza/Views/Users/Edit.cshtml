@model Korizza.Models.Users.EditUserViewModel
@{
    Layout = "_Authorize";
}
@{
    ViewBag.Title = "Редактирование пользователя";
}
<div id="validationMessage">@ViewBag.Message</div>

<form asp-action="Edit" asp-controller="Users">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label">Email</label>
        <input type="text" asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label">Password</label>
        <input type="text" asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-success" />
    </div>
</form>
<a asp-action="UsersList" class="btn btn-primary btn-sm active" role="button">Back to List</a>
<script>
    var message = document.getElementById('validationMessage');
    if (message.textContent != "") {
        message.className = "bg-success text-white justify-content-center rounded p-0 d-flex align-items-center py-2 px-3";
    }
</script>
